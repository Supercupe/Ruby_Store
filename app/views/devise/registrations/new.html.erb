<section class="section_login">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="form-structor">
  <!-- Signup Section -->
  <div class="signup">
    <h2 class="form-title" id="signup"><span>or</span>Sign Up</h2>
    <div class="form-holder">
      <!-- Email Input -->
      <div class="input">
        <%= f.email_field :email, placeholder: "Email", class: "input", autofocus: true, autocomplete: "email" %>
      </div>
      <!-- Password Input -->
      <div class="input">
        <%= f.password_field :password, placeholder: "Password", class: "input", autocomplete: "new-password" %>
      </div>
      <!-- Password Confirmation -->
      <div class="input">
        <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "input", autocomplete: "new-password" %>
      </div>
    </div>
    <!-- Submit Button -->
    <%= f.submit "Sign up", class: "submit-btn" %>
  </div>
  <% end %>

  <!-- Login Section -->
  <div class="login slide-up">
    <div class="center">
      <h2 class="form-title" id="login"><span>or</span>Log In</h2>
      <div class="form-holder">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <!-- Email Input -->
        <div class="input">
          <%= f.email_field :email, placeholder: "Email", class: "input", autocomplete: "email" %>
        </div>
        <!-- Password Input -->
        <div class="input">
          <%= f.password_field :password, placeholder: "Password", class: "input", autocomplete: "current-password" %>
        </div>
      </div>
      <!-- Submit Button -->
      <%= f.submit "Log in", class: "submit-btn" %>
      <% end %>
    </div>
  </div>
</div>
</section>