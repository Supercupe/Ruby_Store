<%= form_with model: product, class: "form-container" do |form| %>

  <div class="form-holder">
    <div class="input-group">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-input" %>
    </div>

    <div class="input-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.rich_text_area :description, class: "form-input" %>
    </div>

    <div class="input-group">
      <%= form.label :featured_image, class: "form-label" %>
      <%= form.file_field :featured_image, accept: "image/*", class: "form-input" %>
    </div>

    <div class="input-group">
      <%= form.label :inventory_count, class: "form-label" %>
      <%= form.number_field :inventory_count, class: "form-input" %>
    </div>

    <div class="input-group">
      <%= form.label :price, class: "form-label" %>
      <%= form.number_field :price, step: :any, class: "form-input" %>
    </div>

    <div class="submit-btn-container">
      <%= form.submit "Save Product", class: "submit-btn" %>
    </div>
  
    <div class="actions-container">
      <%= link_to "Cancel", @product, class: "cancel-link" %>
    </div>
  </div>
<% end %>
